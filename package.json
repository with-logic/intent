{
  "name": "intent",
  "version": "0.1.0",
  "private": false,
  "description": "Intent: a small, well-typed LLM-based reranker.",
  "keywords": [
    "llm",
    "reranker",
    "ranking",
    "groq",
    "openai",
    "relevance"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/with-logic/intent.git"
  },
  "bugs": {
    "url": "https://github.com/with-logic/intent/issues"
  },
  "homepage": "https://github.com/with-logic/intent#readme",
  "type": "module",
  "sideEffects": false,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsc -p tsconfig.json",
    "test": "vitest run --coverage",
    "test:unit": "cross-env TEST_SCOPE=unit vitest run --coverage",
    "test:int": "cross-env TEST_SCOPE=int vitest run --coverage",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint . --ext .ts,.tsx --fix && prettier --write .",
    "lint:check": "eslint . --ext .ts,.tsx && prettier --check .",
    "pre-commit": "npm run typecheck && npm test && npm run build",
    "prepare": "husky"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "groq-sdk": "^0.8.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vitest/coverage-v8": "^2.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "globals": "^15.9.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "vitest": "^2.1.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
